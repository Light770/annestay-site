---
// Basic Light Call To Action section
// ------------
// Description: A centered call to action section that contains: a title, text, a rating and a button.

// Components
// - Layout
import Section from '../../ui/Section.astro'
import Row from '../../ui/Row.astro'
import Col from '../../ui/Col.astro'
// - UI
import CTA from '../../ui/CTA.astro'
import Button from '../../ui/Button.astro'
import Ratings from '../../ui/Rating.astro'

// Props
type Props = {
	data?: any
}
const { data } = Astro.props

// Content - use data from props or fallback to defaults
const ctaContent = {
	title: data?.title || 'Join the Foxi Revolution!',
	text: data?.text || 'Discover why thousands of professionals trust our platform to streamline their workflow and enhance productivity. Get started today and see the difference for yourself!',
	buttonText: data?.buttonText || 'Get started now!',
	buttonLink: data?.buttonLink || '/',
	rating: data?.rating || 5,
	ratingText: data?.ratingText || '30K customer ratings'
}
---

<Section>
	<Row>
		<Col span="1" />
		<Col span="10">
			<CTA
				title={ctaContent.title}
				text={ctaContent.text}
				classes="!shadow-none"
			>
				<Ratings rating={ctaContent.rating} text={ctaContent.ratingText} classes="mb-4" />
				<Button size="lg" style="primary" link={ctaContent.buttonLink}> {ctaContent.buttonText} </Button>
			</CTA>
		</Col>
		<Col span="1" />
	</Row>
</Section>
